#include<stdio.h>
#include<windows.h>
#include<conio.h>
#include<string.h>
char map[9][12]={
{"*#*********"},
{"***###*###*"},
{"###**#****#"},
{"*#**###**#*"},
{"***********"},
{"#####*##*##"},
{"**#*****#*E"},
{"***#*###**#"},
{"*#*********"},
};
int N=9,M;
int curX,curY;
int curx,cury;
void print_map()
{
	int i;
	for(i=0;i<N;i++)
	{
		puts(map[i]);
	};
}
void show_cursor(int X,int Y)//光标显示
{
	COORD pos;
	pos.X=curX;
	pos.Y=curY;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
}


int main()
{   
	char t;
	M=strlen(map[0]);

	while(1)
	{
		system("cls");
		print_map();
		show_cursor(curX,curY);
	    t=getch();
		switch(t)
		{
			case 'w':
			curY--;
			if(curY<0) curY=0;
			if(map[curY][curX]=='#') curY++;
			break;
		case 's':
			curY++;
			if(curY>=N) curY=N-1;
			if(map[curY][curX]=='#') curY--;
			break;
		case 'a':
			curX--;
			if(curX<0) curX=0;
			if(map[curY][curX]=='#') curX++;
			break;
		case 'd':
			curX++;
			if(curX>=M) curX=M-1;
			if(map[curY][curX]=='#') curX--;
			break;
			

		
		}
	if(map[curY][curX]=='E')
	{
		printf("通过成功");
		break;
	}
	
	}
}
